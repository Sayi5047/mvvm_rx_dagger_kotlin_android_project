<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:animateLayoutChanges="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/incoming_trip_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/padding_16"
            android:text="@string/incoming_trip_request"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_32"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ph.bilidito.driver.cutomviews.CircularProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_margin="@dimen/margin_48"
            android:background="@drawable/cir_progress_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/incoming_trip_request" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintBottom_toBottomOf="@id/progress_circular"
            app:layout_constraintEnd_toEndOf="@id/progress_circular"
            app:layout_constraintStart_toStartOf="@id/progress_circular"
            app:layout_constraintTop_toBottomOf="@id/incoming_trip_request"
            app:layout_constraintTop_toTopOf="@id/progress_circular"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_new_location" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <TextView
            android:id="@+id/action_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/rounded_rect_positive_button_bg"
            android:padding="@dimen/padding_16"
            android:text="@string/trip_already_assigned"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/accept_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/middleView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/accept_btn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_check_circle_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/middleView"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/reject_btn"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:rotation="135"
            android:src="@drawable/ic_add_circle_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/middleView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_48"
            android:text="@string/reject"
            android:textColor="@color/red_pink"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/reject_btn"
            app:layout_constraintStart_toStartOf="@id/reject_btn"
            app:layout_constraintTop_toBottomOf="@id/reject_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_48"
            android:text="@string/accept"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/accept_btn"
            app:layout_constraintStart_toStartOf="@id/accept_btn"
            app:layout_constraintTop_toBottomOf="@id/accept_btn" />

        <ImageView
            android:id="@+id/ignore_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginBottom="@dimen/margin_16"
            android:padding="@dimen/padding_8"
            android:rotation="180"
            android:src="@drawable/ic_block_black_24dp"
            android:text="@string/ignore"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_24"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="@string/ignore"
            android:textColor="@color/amber"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ignore_btn"
            app:layout_constraintStart_toStartOf="@id/ignore_btn"
            app:layout_constraintTop_toBottomOf="@id/ignore_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/api_loading_screen"
        layout="@layout/api_loading_screen"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>