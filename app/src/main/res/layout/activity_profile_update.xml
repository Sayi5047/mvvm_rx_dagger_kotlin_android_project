<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"

    tools:context=".v1.Activities.ProfileUpdateActivity"
    android:animateLayoutChanges="true"
    android:layoutAnimation="@anim/layout_anim_climb_up">

    <TextView
        android:id="@+id/head_text"
        style="@style/text_headding_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/card_view"
        android:padding="@dimen/padding_16"
        android:text="@string/hi_there_please_enter_your_personal_details"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_16"
        app:cardCornerRadius="@dimen/margin_8">

        <RelativeLayout
            android:id="@+id/card_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_below="@id/head_text">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:textColorHint="@color/white"
                app:counterTextColor="@color/white"
                app:errorTextColor="@android:color/holo_red_light"
                app:hintTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                app:backgroundTint="@color/white"
                app:boxBackgroundColor="@color/white">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/first_name"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    android:textColorHint="@color/white"
                    app:backgroundTint="@color/white"

                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_layout"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:textColorHint="@color/white"
                app:counterTextColor="@color/white"
                app:errorTextColor="@android:color/holo_red_light"
                app:hintTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                app:boxBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/margin_8">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:padding="@dimen/padding_8"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name_layout"
                android:layout_marginLeft="@dimen/margin_16"
                android:textColorHint="@color/white"
                app:counterTextColor="@color/white"
                app:errorTextColor="@android:color/holo_red_light"
                app:hintTextColor="@color/white"
                app:helperTextTextColor="@color/white"
                app:boxBackgroundColor="@color/white"
                android:layout_marginRight="@dimen/margin_16">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="@string/Email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/padding_8"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/provinceSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48"
                android:layout_below="@id/email_layout"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                app:backgroundTint="@android:color/white"
                android:spinnerMode="dialog"
                android:textAlignment="textStart" />
            <View
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_below="@id/provinceSpinner"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/zipSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_48"
                android:layout_below="@id/provinceSpinner"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                android:layout_marginTop="@dimen/margin_8"
                android:textAlignment="textStart"
                app:backgroundTint="@android:color/white"
                android:spinnerMode="dialog"
                android:visibility="gone" />
            <View
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:layout_below="@id/zipSpinner"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:visibility="gone"/>
            <Button
                android:id="@+id/submit_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/zipSpinner"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_16"
                android:background="@drawable/rounded_rect_full_white"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/colorAccent" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zipSpinner"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/margin_16"
                android:background="@drawable/cir_progress_bg"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_bluwaves" />
</RelativeLayout>