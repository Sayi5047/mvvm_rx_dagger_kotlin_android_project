<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin_4"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/margin_4"
            android:id="@+id/productNameText"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:text="Product"
            android:visibility="invisible"

            android:textAlignment="viewStart"
            android:textSize="@dimen/text_14"
            android:alpha="0.5"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8" />

        <TextView
            android:id="@+id/productNameValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/productNameText"
            android:visibility="invisible"
            android:text="Ongoing"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_17"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"

            android:textColor="@color/colorAccent" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/Items"
            android:layout_below="@id/productNameValue"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_14"
            android:alpha="0.5"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/margin_4" />

        <TextView
            android:id="@+id/variantNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productNameText"
            android:layout_below="@id/productNameValue"
            android:text="Ongoing"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_17"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/margin_4"

            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Package"
            android:layout_below="@id/variantNameValue"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_14"
            android:alpha="0.5"
            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/margin_4" />

        <TextView
            android:id="@+id/packageNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productNameText"
            android:layout_below="@id/variantNameValue"
            android:text="Ongoing"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_17"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/margin_4"

            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quantity"

            android:layout_below="@id/packageNameValue"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_14"
            android:alpha="0.5"

            android:layout_alignParentStart="true"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/margin_4" />

        <TextView
            android:id="@+id/productQuantityValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/productNameText"

            android:text="2 "
            android:layout_below="@id/packageNameValue"
            android:textAlignment="viewStart"
            android:textSize="@dimen/text_17"
            android:paddingStart="@dimen/padding_8"
            android:paddingEnd="@dimen/padding_8"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:textColor="@color/colorAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/productQuantityValue"
            android:layout_margin="@dimen/margin_4"
            android:background="@color/bg" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>