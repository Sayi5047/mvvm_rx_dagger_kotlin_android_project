<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    tools:context=".v1.Activities.ExperimentsActivity">

    <TextView
        android:id="@+id/bgText"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="@dimen/padding_16"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="@dimen/margin_16"
        android:background="@drawable/rounded_rect_positive_button_bg" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:lottie_rawRes="@raw/lottie_deliver"
        android:tint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:lottie_loop="true"
        android:background="@drawable/rounded_rect_blue"
        android:gravity="center"
        android:layout_margin="@dimen/margin_16" />
</RelativeLayout>