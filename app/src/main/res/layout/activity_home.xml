<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivityV2"
   >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/bg"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav_view"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_menu"


            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardBackgroundColor="#44000000"
        app:cardCornerRadius="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_4"
            android:background="@drawable/rounded_rect_white"
            android:orientation="vertical"
            android:padding="@dimen/padding_8">

            <ImageView
                android:id="@+id/driver_image"
                android:layout_width="@dimen/margin_48"
                android:layout_height="@dimen/margin_48"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:background="@drawable/cir_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:padding="@dimen/padding_16"
                android:paddingStart="@dimen/padding_8"
                android:text="@string/dummy_driver_name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_18"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="@id/driver_image"
                app:layout_constraintEnd_toStartOf="@id/driver_number"
                app:layout_constraintHorizontal_weight="1.5"
                app:layout_constraintStart_toEndOf="@id/driver_image"
                app:layout_constraintTop_toTopOf="@id/driver_image" />

            <TextView
                android:id="@+id/driver_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_8"
                android:alpha="0.5"
                android:padding="@dimen/padding_16"
                android:text="@string/dummy_number2"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/driver_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/driver_name"
                app:layout_constraintTop_toTopOf="@id/driver_image" />

            <View
                android:id="@+id/space1"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_16"
                android:alpha="0.3"
                android:background="@color/textColor"
                app:layout_constraintTop_toBottomOf="@id/driver_image" />

            <ImageView
                android:id="@+id/support_iv"
                android:layout_width="@dimen/icon_48"
                android:layout_height="@dimen/icon_48"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@drawable/cir_progress_bg"
                android:padding="@dimen/padding_12"
                android:src="@drawable/ic_support"
                app:layout_constraintEnd_toEndOf="@id/driver_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/driver_image" />

            <ImageView
                android:id="@+id/faq_iv"
                android:layout_width="@dimen/icon_48"
                android:layout_height="@dimen/icon_48"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/cir_progress_bg"
                android:padding="@dimen/padding_12"
                android:src="@drawable/ic_question_answer_black_24dp"
                app:layout_constraintEnd_toEndOf="@id/driver_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/support_iv" />

            <ImageView
                android:id="@+id/legal_iv"
                android:layout_width="@dimen/icon_48"
                android:layout_height="@dimen/icon_48"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/cir_progress_bg"
                android:padding="@dimen/padding_12"
                android:src="@drawable/ic_business_center_black_24dp"
                app:layout_constraintEnd_toEndOf="@id/driver_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/faq_iv" />

            <ImageView
                android:id="@+id/logout_iv"
                android:layout_width="@dimen/icon_48"
                android:layout_height="@dimen/icon_48"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/cir_progress_bg"
                android:padding="@dimen/padding_12"
                android:src="@drawable/ic_exit_to_app_black_24dp"
                app:layout_constraintEnd_toEndOf="@id/driver_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/legal_iv" />


            <TextView
                android:id="@+id/support_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:padding="@dimen/padding_12"
                android:text="@string/support"
                android:textColor="@color/textColor"
                app:layout_constraintBottom_toBottomOf="@id/support_iv"
                app:layout_constraintEnd_toEndOf="@id/driver_number"
                app:layout_constraintStart_toStartOf="@id/driver_name"
                app:layout_constraintTop_toTopOf="@id/support_iv" />

            <TextView
                android:id="@+id/faq_tv"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:ellipsize="marquee"
                android:padding="@dimen/padding_12"
                android:text="@string/FAQ"
                android:textColor="@color/textColor"
                app:layout_constraintBottom_toBottomOf="@id/faq_iv"
                app:layout_constraintEnd_toEndOf="@id/driver_number"
                app:layout_constraintStart_toStartOf="@id/driver_name"
                app:layout_constraintTop_toTopOf="@id/faq_iv" />

            <TextView
                android:id="@+id/legal_tv"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:padding="@dimen/padding_12"
                android:text="@string/legal"
                android:textColor="@color/textColor"
                app:layout_constraintBottom_toBottomOf="@id/legal_iv"
                app:layout_constraintEnd_toEndOf="@id/driver_number"
                app:layout_constraintStart_toStartOf="@id/driver_name"
                app:layout_constraintTop_toTopOf="@id/legal_iv" />

            <TextView
                android:id="@+id/logout_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:padding="@dimen/padding_12"
                android:text="@string/Logout"
                android:textColor="@color/textColor"

                app:layout_constraintBottom_toBottomOf="@id/logout_iv"
                app:layout_constraintEnd_toEndOf="@id/driver_number"
                app:layout_constraintStart_toStartOf="@id/driver_name"
                app:layout_constraintTop_toTopOf="@id/logout_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/api_loading_screen"
        layout="@layout/api_loading_screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/no_internet_screen"
        layout="@layout/no_internet_screen"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>