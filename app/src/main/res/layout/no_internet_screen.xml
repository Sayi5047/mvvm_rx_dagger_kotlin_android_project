<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/api_loading_screen"
    android:fitsSystemWindows="true"

    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_rect_bbg"
        android:layout_margin="@dimen/margin_16">

        <ImageView
            android:id="@+id/pb_loading"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:visibility="visible"
            android:layout_margin="@dimen/margin_8"
            android:src="@drawable/ic_signal_wifi_off_primary_24dp"
            android:background="@drawable/rounded_rect_bbg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pb_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8" />

        <TextView
            android:id="@+id/pb_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/rounded_rect_bbg"
            android:padding="@dimen/padding_8"
            android:text="@string/no_internet_connect_and_try"
            android:textColor="@color/red_pink_alpha"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_8"
            android:textSize="@dimen/text_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

