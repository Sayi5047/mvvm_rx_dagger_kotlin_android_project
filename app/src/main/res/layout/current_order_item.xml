<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_8"
    android:layout_margin="@dimen/margin_8">

    <RelativeLayout
        android:id="@+id/history_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_4"
        android:animateLayoutChanges="true"
        android:elevation="@dimen/margin_8"
        android:padding="@dimen/padding_4">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="@dimen/std_img_size"
            android:layout_height="@dimen/std_img_size"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_toEndOf="@id/status_line"
            android:background="#b2ebf2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/status_line"
            android:layout_width="6dp"
            android:layout_height="120dp"
            android:background="#b2ebf2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:text="13-Dec-2018"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_order_items_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"
            android:text="Daily Gulb_janmun"
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_8"
            android:text="@string/_70_inr"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_amount"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_toEndOf="@id/iv_product_image"
            android:text="@string/_70_inr"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_4"
            android:background="#b2ebf2"
            android:gravity="center"
            android:padding="@dimen/padding_8"
            android:text="Paid"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
